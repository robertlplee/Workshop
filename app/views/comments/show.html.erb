<h2>Add a comment:</h2>

<%= form_for ([@lesson, @lesson.comments.build]) do |f| %>
    <p>
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter %>
    </p>
    
    <p>
        <%= f.label :body %><br>
        <%= f.text_field :body %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<%end%>

<% link_to 'Back', lessons_path %>
