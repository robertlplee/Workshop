<%= form_for ([@lesson, @comment]) do |f| %>
    <p>
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter %>
    </p>
    
    <p>
        <%= f.label :body %><br>
        <%= f.text_field :body %>
    </p>
    
    <p>
        <%= f.submit 'Submit', :class => "btn btn-success" %>
    </p>
<%end%>

